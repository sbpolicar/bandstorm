<div ng-app="BandStormApp">
  <div class="row">
      <div class="col-md-12">
        <div class="nav-bar nav btn-info active">
            <md-button class="list-group-item pull-left brand"><a href="/" class="no-link-decoration"><i class="glyphicon glyphicon-home"></i>&nbsp;<big>B</big><small>and</small><big>S</big><small>torm</small></a></md-button>
          <ul class="list-group" ng-controller="AuthCtrl">
            <md-button ng-show='currentUser' class="list-group-item pull-right btn btn-info"><a class="no-link-decoration" href="/projects/{{currentUser.id}}">{{currentUser.name}}'s Projects</a><md-tooltip>Go to Project View</md-tooltip></md-button>
            <md-button ng-show='currentUser' ng-click="logOut()" class="list-group-item pull-right btn btn-info"><b>Logout</b></md-button>

            <md-button ng-hide='currentUser' ng-click="logInModal()" class="list-group-item pull-right btn btn-info"><b>Login<md-tooltip>Go to Login Page</md-tooltip></b></md-button>
            <md-button ng-hide='currentUser' ng-click="signUpModal()" class="list-group-item pull-right btn btn-info"><b>Signup<md-tooltip>Go to Signup Page</md-tooltip></b></md-button>
          </ul>
        </div>
      </div>
    </div>
  <ng-view></ng-view>
</div>